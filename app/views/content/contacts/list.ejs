<div class="container">
    <h1><%=title %></h1>
    <a href="/contacts-add" class="btn btn-primary" role="button">
        <i class="fas fa-plus-circle"></i> Add a Business Contact
    </a>
    <div class="row">
        <div class="column">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Contact Number</th>
                        <th scope="col">Email address</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="ContactsList">
                    <% for(let count=0; count < contacts.length; count++) { %>                   
                        <tr>
                            <td scope="row" class="text-center"></td>
                            <td><%= contacts[count].name %></td>
                            <td><%= contacts[count].contact %></td>
                            <td><%= contacts[count].email %></td>
                           
                            <td class="text-center col-1">
                                <a class="btn btn-primary" href="/contacts-edit/<%= contacts[count].id %>">
                                    Edit
                                </a>
                            </td>
                            <td class="text-center col-1">
                                <a class="btn btn-warning" href="/contacts-delete/<%= contacts[count].id %>">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>